
pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Build Jar') {
            steps {
                script {
                    echo "Building the application..."
                    sh 'mvn clean package'
                }
            }
        }
        stage('Build Image') {
            steps {
                script {
                    echo "Building the Docker image..."
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh '''
                        echo $PASSWORD | docker login -u $USERNAME --password-stdin
                        docker build -t nasser1609/myapp:2.2.2 .
                        docker push nasser1609/myapp:2.2.2
                        '''
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo "Testing the application..."
                    // Replace with actual test commands, e.g., unit or integration tests
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                    // Add deployment logic here, e.g., kubectl commands or scp
                }
            }
        }
    }
}
